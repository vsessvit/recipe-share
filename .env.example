# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=False

# Database 
# Leave DATABASE_URL empty for local SQLite development
# For Heroku, this will be automatically set by Heroku Postgres
DATABASE_URL=

# Allowed Hosts (comma-separated)
# For Heroku, add: your-app-name.herokuapp.com
ALLOWED_HOSTS=localhost,127.0.0.1

# CSRF Trusted Origins (comma-separated, with https://)
# For Heroku, add: https://your-app-name.herokuapp.com
CSRF_TRUSTED_ORIGINS=
